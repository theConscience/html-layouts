@import 'helpers/variables'
@import 'helpers/mixins'
@import 'helpers/block_mixins'

.important-block--rounded
    border 1px solid dim
    border-radius bdrs-rndd

.select--light
.input--light
    display inline-block
    // box-sizing border-box
    padding-top 5px
    padding-right 15px
    padding-bottom 4px
    padding-left 13px
    max-height 28px
    max-width 188px
    border 1px solid dim
    border-radius bdrs-rndd

.select--light:disabled
.input--light:disabled
    border-color #dddddd
    color #979797

.input--light
    max-width 228px
    width 228px

.select--small
    padding-left 13px
    padding-right 5px
    min-width 60px
    border 1px solid dim
    border-radius bdrs-rndd

.calendar
    display inline-block
    min-width 60px
    border-bottom 1px dotted dim
    text-decoration none
    text-align center
    cursor pointer
    fontDatepickers()
    line-height 19px

.link--dark-underlined
    fontLinkDarkUnderlined()

.link--bright-underlined
    fontLinkBrightUnderlined()

.custom-badge--1
    position relative
    display inline-block
    padding-top 1px
    padding-right 8px
    padding-left 15px
    border-radius 10px

    &:before
        position absolute
        left 7px
        top 0
        bottom 0
        width 4px
        height 4px
        margin-top auto
        margin-bottom auto
        border-radius 50%
        background-color lightest
        content ''

.custom-badge--bright
    fontBadgeBright()

.custom-badge--alternate
    fontBadgeAlternate()

.custom-badge--2
    position relative
    display inline-block
    width 40px
    height 19px
    padding-top 1px
    padding-right 8px
    padding-left 8px
    border 1px solid medium
    border-radius 20px

.custom-badge--flight-to
    text-align left

    &:before
        position absolute
        left 21px
        top 3px
        width 11px
        height 11px
        background-image url(../img/i_plane.png)
        background-repeat no-repeat
        content ''

.custom-badge--flight-back
    &:before
        position absolute
        left 21px
        top 3px
        width 11px
        height 11px
        background-image url(../img/i_plane.png)
        background-repeat no-repeat
        transform(rotate(180deg))
        content ''

.marker--bright
    fontMarkerBright()
    display inline-block
    padding-top 4px
    padding-right 15px
    padding-bottom 3px
    padding-left 15px
    border-radius 3px

    .glyphicon
        font-size 13px

.text-linethrough
    fontLineThrough()
    text-decoration line-through

.custom-icon
    display inline-block
    background-repeat no-repeat

.custom-icon--pig
    width 19px
    height 20px
    background-image url(../img/i_pig.png)

.custom-icon--ball
    width 15px
    height 15px
    background-image url(../img/i_ball.png)

