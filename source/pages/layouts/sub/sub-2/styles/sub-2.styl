@import './helpers/_variables'
@import './helpers/_block_mixins'
@import './helpers/_mixins'

/**--------------------------------*\
 * .external-page__navigation
 ** dfsdf dsf sd fsdf sd s df sd
 ** sdf sdf dfs dfsdfsdfsdfsdfsd
 ** dsfs sdfsdfsdfsdf sdfsdf
\*--------------------------------*/
.external-page__navigation/*.nav-external*/
    position absolute
    z-index 10
    left 0
    top 0
    bottom 0
    display flex
    width 100px
    color c_darkest-font
    background-color c_basic-bg

    > ul
        width 100% /**/
        padding 0
        margin 0
        list-style-type none

/*li*/.nav-external__item
    position relative

.nav-external__item--special
    position relative
    z-index 20
    background-color c_basic-bg

/*a*/.nav-external__link
    position relative
    z-index 20
    display block
    height 100px
    text-decoration none
    transition color .4s


/* languages block *\
\*-----------------*/

.nav-external__link--lang-selection
    fontHvMedium18_30()
    padding-top 36px
    text-align center
    text-transform uppercase
    color c_darkest-font
    background-color c_basic-bg

    &:hover
    &:focus
        color c_contrast

    &:hover ~ .lang-selection__popup-1
        left 100px

    &:focus ~ .lang-selection__popup-2
        visibility visible
        opacity 1

/*ul*/.lang-selection__popup-1/*.lang-selection*/
    position absolute
    top 0
    left -600px
    display flex
    min-height 100px
    padding 0
    margin 0
    list-style-type none
    color c_white
    background-color c_darken-bg
    transition left .4s ease-in

    &:hover
        left 100px

.lang-selection__item
    width 100px

    &:nth-of-type(odd) > .lang-selection__link
        background-color c_darken-bg

    &:nth-of-type(even) > .lang-selection__link
        background-color c_muted-bg

.lang-selection__link
    fontHvMedium18_30()
    display block
    min-height 100px
    padding-top 36px
    text-align center
    text-transform uppercase
    color c_white
    transition color .4s

    &:hover
    &:focus
        color c_contrast

/*ul*/.lang-selection__popup-2/*.languages*/
    position absolute
    left 100px
    top 0
    display block
    width 200px
    padding 0
    margin 0
    visibility hidden
    list-style-type none
    opacity 0
    color c_darken-bg
    background-color c_white
    transition opacity .4s ease-in

.languages__item
    font-size 14px
    line-height 39px
    padding-left 12px
    padding-right 12px
    border-bottom 1px solid c_light-border

.languages__link
    color c_darken-bg
    background-color c_white


/* logo block *\
\*------------*/

.nav-external__link--logo
    padding-top 22px
    color #fff
    background-color c_contrast

    &:hover ~ .logo__popup
    &:focus ~ .logo__popup
        left 100px

/*img*/.logo--white-small
    width 80px
    margin: 0 auto;

.logo__popup
    position absolute
    left -600px
    top 0
    display block
    width 330px
    padding 20px 33px
    fontHvBold14_20()
    text-transform uppercase
    color c_seo-darken
    background-color c_white
    transition left .4s ease-in


/* sign-in block *\
\*---------------*/

.nav-external__link--sign-in
    padding-top 67px
    fontHvMedium12_30()
    color c_darkest-font
    background-image url(../images/bg-enter.svg)
    background-repeat no-repeat
    background-size 30px auto
    background-position center center
    background-color c_basic-bg
    text-align center
    text-transform uppercase

    &:hover
    &:focus
        color c_contrast

    &::after
        position absolute
        left -600px
        top 0
        bottom 0
        z-index 30
        width 0
        height 0
        border 10px solid transparent
        border-left 8px solid c_basic-bg
        margin auto
        opacity 0
        transition left .4s ease-in, opacity .4s ease-in
        content ''

    &:hover::after
    &:focus::after
        left 100px
        opacity 1

    &:hover ~ .sign-in__popup
    &:focus ~ .sign-in__popup
        left 100px

.sign-in__popup
    position absolute
    z-index 10
    top 0
    bottom 0
    left -600px
    display block
    width 288px
    padding-top 31px
    padding-right 57px
    padding-left 49px
    background-color c_dark-transparent-bg
    transition left .4s ease-in
    box-shadow 0 0 30px rgba(0, 0, 0, 0.5)

    &::before
        position absolute
        top 240px
        left 0
        width 0
        height 0
        border 10px solid transparent
        border-left 8px solid c_basic-bg
        margin auto
        opacity 0
        content ''

    &:hover::before
    &:focus::before
        opacity 1

    &:hover
    &:focus
        left 100px

.sign-in__header
    fontHvLight30_52()
    position relative
    padding-left 36px
    margin-bottom 25px
    color c_contrast

    &::before
        position absolute
        left -9px
        top 13px
        display block
        width 24px
        height 26px
        background-image url(../images/bg-login.svg)
        background-repeat no-repeat
        content ''

/*input[type=text]*/.sign-in__login
/*input[type=password]*/.sign-in__password
    width 100%
    color c_white
    border 1px solid c_medium-border
    background-color transparent

.sign-in__login
    margin-bottom 12px

.sign-in__password
    margin-bottom 4px

.sign-in__label
    color c_medium-font

/*a*/.sign-in__forgot-password
    fontHvLight13_30()
    color c_white
    text-decoration underline
    transition color .4s

    &:hover
    &:focus
        color c_contrast

.sign-in__popup button[type=submit]
    margin-top 10px
    margin-bottom 57px
    display block


/* about block *\
\*-------------*/

.nav-external__link--about
    padding-top 67px
    background-image url(../images/bg-about-us.svg)
    background-repeat no-repeat
    background-size 32px 32px
    background-position center center
    background-color c_basic-bg
    fontHvMedium12_30()
    color c_darkest-font
    text-align center
    text-transform uppercase

    &:hover
    &:focus
        color c_contrast

.nav-external__link--xml-test
    padding-top 67px
    background-image url(../images/bg-xml.png)
    background-repeat no-repeat
    background-size 32px auto
    background-position center center
    background-color c_basic-bg
    fontHvMedium12_30()
    color c_darkest-font
    text-align center
    text-transform uppercase

    &:hover
    &:focus
        color c_contrast


/**--------------------------------*\
 * .external-page__additional-info
 **
\*--------------------------------*/
.external-page__additional-info
    position absolute
    z-index 20
    right 0
    top 0
    bottom 0
    width 284px
    color c_white
    background-color c_darken-bg
    box-shadow 0 0 30px rgba(0, 0, 0, 0.5)

.info-additional__header
    min-height 327px
    padding-top 196px
    padding-left 34px
    padding-right 33px
    fontHvMedium18_24()
    color c_white
    background-color c_darken-bg
    background-image url(../images/bg-info.png)
    background-repeat no-repeat
    background-position center 68px
    background-size 105px 105px
    text-align center

.info-additional__promo-banner
    position relative
    min-height 100px
    padding-top 18px
    padding-right 54px
    padding-left 54px
    fontHvRoman14_20()
    color c_white
    background-color c_contrast
    text-align center

    &::before
        position absolute
        top 15px
        left 23px
        display block
        fontHvThin60()
        color c_white-transparent-03
        content '{'

    &::after
        position absolute
        top 15px
        right 23px
        display block
        fontHvThin60()
        color c_white-transparent-03
        content '}'

/*ul*/.info-additional__for-clients
    margin 0
    padding 0
    list-style-type none
    background-color c_darker-2-bg

/*li*/.for-clients__item
    position relative

/*a*/.for-clients__link
    position relative
    z-index 20
    display block
    padding-top 14px
    padding-bottom 14px
    padding-left 58px
    fontHvLight16_24()
    color c_promo-dull
    background-color c_darker-2-bg
    box-shadow inset 0 2px 5px rgba(0, 0, 0, .28)
    transition background-color .4s, color .4s

    &:hover
    &:focus
        color c_white
        background-color c_promo-dark
        text-decoration none

    &:active
        color c_white-darken
        background-color c_promo-dark
        text-decoration none

    &:hover + .for-clients__tooltip
        right 300px
        opacity 1

.for-clients__tooltip
    position absolute
    right -400px
    top 0
    min-height 52px
    min-width 275px
    padding-top 9px
    padding-right 20px
    padding-bottom 9px
    padding-left 20px
    border-radius 3px
    fontHvRoman14_16()
    color c_white
    background-color c_contrast-transparent
    box-shadow 0 0 5px rgba(0, 0, 0, .75)
    transition right .4s, opacity .4s
    opacity 0

    &::after
        position absolute
        right -18px
        top 0
        bottom 0
        margin auto
        width 0
        height 0
        border 10px solid transparent
        border-left 8px solid c_contrast-transparent
        content ''
