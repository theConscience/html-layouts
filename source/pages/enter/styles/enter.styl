/*main*/.enter-content/*.enter-page__content*/
    // position absolute
    // top 0
    // bottom 0
    position relative
    display flex
    align-items stretch
    overflow hidden
    width 100%
    // padding-left 100px
    background-color c_darker-bg

    @media (max-width: 1023px)
        flex-direction: column;

/*article*/.enter-content__hotels
    width 100%
    padding-top 42px
    padding-left 67px
    padding-bottom 30px
    color c_white
    background-color c_darker-bg
    background-repeat no-repeat
    background-image url(../images/bg-hotels.jpg)
    background-position left top
    background-size auto 100%

    @media (max-width: 1023px)
        border-bottom 7px solid c_seo

.hotels-enter__header
.agents-enter__header
    display flex
    justify-content space-between
    width 45%
    min-width 522px
    margin-bottom 66px

    @media (max-width: 1565px)
        flex-wrap wrap

.hotels-enter__header > div:nth-child(2)
.agents-enter__header > div:nth-child(2)
    padding-left 20px

    @media (max-width: 1565px)
        padding-top 20px
        padding-left 0

/*h1*/.hotels-enter__for-hotels
/*h1*/.hotels-enter__for-representatives
/*h1*/.agents-enter__for-agents
/*h1*/.agents-enter__for-operators
    margin 0
    fontHvBold32()
    color c_white
    text-transform uppercase

.hotels-enter__for-representatives
    @media (max-width: 1140px)
        max-width 400px

.agents-enter__for-operators
    @media (max-width: 1140px)
        max-width 285px

/*h1*/.hotels-enter__for-hotels
/*h1*/.agents-enter__for-agents
    margin-bottom 20px

.for-hotels__info
.for-agents__info
    display inline-block
    width 24%
    margin-left 24px
    fontHvLight12_auto()
    color c_darken-font

/*article*/.enter-content__agents
    position absolute
    top 0
    bottom 0
    left 55%
    width 100%
    padding-top 42px
    padding-left 67px
    padding-bottom 30px
    color c_white
    background-color c_darkest-bg
    background-repeat no-repeat
    background-image url(../images/bg-agents.jpg)
    background-position left top
    background-size auto 100%
    transition left 1s

    @media (max-width: 1023px)
        position relative
        top auto
        bottom auto
        left auto
        width 100%
        border-bottom 7px solid c_seo

    &:hover
        left 25%

        @media (max-width: 1023px)
            left 0

.features-list
    width 699px
    padding 0
    margin 0
    list-style-type none

    @media (max-width: 1710px)
        width 466px

    @media (max-width: 1279px)
        width 233px

.features-list__item
    flex-basis 233px
    max-width 233px
    padding-top 88px
    padding-left 32px
    padding-right 32px
    box-sizing border-box
    min-height 184px
    background-repeat no-repeat
    background-position 30px 20px
    padding-top 115px

    &:nth-child(-n+3)
        background-position 30px 0px
        padding-top 88px

        @media (max-width: 1710px)
            padding-top 115px
            background-position 30px 20px

    > h2
        margin 0
        fontHvBold15_22()

        & > .smaller-title
            fontHvLight15_22()

.features-list__item--marked.features-list__item--marked /* хак - чтобы не наследовать padding-top 88px*/
    padding-top 14px
    padding-right 27px
    padding-bottom 18px
    padding-left 27px
    border 7px solid c_seo

    > h2
        margin 0
        fontHvBold16_28()

    > span
        fontHvLight14_28()
        text-transform lowercase

.features-list__item--tourist-services
    background-image url(../images/bg-tourist-services.png)
    background-size 54px 64px


.features-list__item--hotel-page
